# =============================================================================
# ProfPay — локальное развёртывание
# Скопируй: cp .env.example .env  и заполни все поля ниже
# =============================================================================

# ---- Первый администратор (создаётся при первом запуске) ----
# ВАЖНО: задай до первого запуска, потом сменить можно только через сайт
ADMIN_USERNAME=admin
ADMIN_PASSWORD=замени_это_на_свой_пароль

# ---- PostgreSQL ----
POSTGRES_USER=profpay_user
POSTGRES_PASSWORD=замени_это_на_надёжный_пароль_бд
POSTGRES_DB=profpay_db

# ---- JWT / Сессии ----
# Сгенерируй ключ: python3 -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=замени_это_на_сгенерированный_ключ

ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# ---- Режим отладки ----
DEBUG=false

# ---- CORS (не менять для локального запуска) ----
CORS_ORIGINS=["http://localhost","http://localhost:80"]
